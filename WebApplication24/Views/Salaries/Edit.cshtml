@model WebApplication24.Models.Salary

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Accountant.cshtml";
}

<h1>Edit</h1>

<h4>Salary</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SalaryId" />
            <div class="form-group">
                <label asp-for="CutOfsalary" class="control-label"></label>
                <input asp-for="CutOfsalary" class="form-control" />
                <span asp-validation-for="CutOfsalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExtraForEachMonth" class="control-label"></label>
                <input asp-for="ExtraForEachMonth" class="form-control" />
                <span asp-validation-for="ExtraForEachMonth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee"  class="control-label"></label>
                <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Salary1" class="control-label"></label>
                <input asp-for="Salary1" class="form-control" />
                <span asp-validation-for="Salary1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="InfoDisplay" asp-controller=" Accountant">Back </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
